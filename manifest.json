{
  "manifest_version": 3,
  "name": "Xcessbility",
  "version": "1.0",
  "description": "An accessibility tool for disabled users with AI voice assistant and sign language translation.",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
